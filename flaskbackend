from flask import Flask, request, render_template
from ai_modules.pipeline import ai_pipeline
import os

app = Flask(__name__)
UPLOAD_FOLDER = 'uploads/'
AUDIO_FOLDER = 'summaries/'
os.makedirs(UPLOAD_FOLDER, exist_ok=True)
os.makedirs(AUDIO_FOLDER, exist_ok=True)

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/upload', methods=['POST'])
def upload_file():
    file = request.files['file']
    file_path = os.path.join(UPLOAD_FOLDER, file.filename)
    file.save(file_path)

    audio_path = os.path.join(AUDIO_FOLDER, file.filename.replace('.pdf', '.mp3'))
    summary, audio_file = ai_pipeline(file_path, audio_path)

    return render_template('result.html', summary=summary, audio_file=audio_file)

if __name__ == '__main__':
    app.run(debug=True)
